<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="socket.io/socket.io.js"></script>
   
</head>

<body>
    <h1>Hello</h1>
    <form action="http://localhost:4000/chat" method="GET">
        <label for="">Title <input type="text" id="title"></label><br>
        <label for="">Content <input type="text" id="content"></label><br>
        <label for="">Images <input type="text" id="images"></label><br>
        <label for="">Type <input type="text"  id="type"></label>
        <br><input type="button" value="Submit" onclick="sendMessage()">
    </form>
    <script>
        var socket = io("http://localhost:4000")
        function sendMessage() {
            socket.emit("messageSent", {
                "title" : document.getElementById('title').value,
                "content" : document.getElementById('content').value,
                "images" : document.getElementById('images').value,
                "type" : document.getElementById('type').value,
            })
        }
    </script>
</body>

</html>